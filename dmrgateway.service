[Unit]
Description=DMRGateway
After=network-online.target
Wants=network-online.target
StartLimitIntervalSec=30
StartLimitBurst=3

[Service]
Type=simple
Restart=on-failure
PIDFile=/home/mmdvm/dmrgateway.pid
WorkingDirectory=/home/mmdvm/

User=root
Group=root

OOMScoreAdjust=-1000

ExecStart=/root/sources/DMRGateway/DMRGateway /etc/dmrgateway
ExecStop=/bin/kill -HUP $MAINPID
ExecReload=/bin/kill -HUP $MAINPID
TimeoutSec=300

[Install]
WantedBy=multi-user.target 